<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_background"
        android:id="@+id/recordLayout"
        android:fillViewport="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_background">

        <TextView
            android:id="@+id/nombreForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/cardview_light_background"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Juan"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enter_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />




        <TextView
            android:id="@+id/comentForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="comentario:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Escriba aquí los comentarios"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:textColor="@android:color/black"
            android:textColorHint="#8b7765"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/horaEntradaForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Hora de entrada:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/enter_enter_hour"
            android:layout_width="269dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:divider="@drawable/timepicker_selection_divider"
            android:theme="@style/CustomTimePicker"
            android:timePickerMode="spinner" />


            <TextView
                android:id="@+id/comentComidaForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Comidas:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!-- Menú -->
            <TextView
                android:id="@+id/menuForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Menú:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enter_meal_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Escriba aquí el menú"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="#8b7765"
                android:textSize="18sp" />
        <RadioGroup
            android:id="@+id/meal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comió todo"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dejó la comida a la mitad"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No comió"
                android:textColor="@android:color/black" />
        </RadioGroup>
        <TextView
            android:id="@+id/evID1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Evacuaciones"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evacuations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCountevID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/minusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/miID1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Micciones"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urinations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCountmiID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/minusButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/cambiosRopaForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Cambios de ropa:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clothes_change_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCountCambiosRopaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/minusButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/incidenciasClaseForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Incidencias en clase:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/class_incident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Escriba aquí las incidencias en clase"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:textColor="@android:color/black"
            android:textColorHint="#8b7765"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/incidenciasMedicasForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Incidencias médicas:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/medic_incident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Escriba aquí las incidencias médicas"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:textColor="@android:color/black"
            android:textColorHint="#8b7765"
            android:textSize="18sp" />



        <!-- Hora de salida -->
        <TextView
            android:id="@+id/horaSalidaForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Hora de salida:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/enter_exit_hour"
            android:layout_width="269dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:timePickerMode="spinner"
            android:theme="@style/CustomTimePicker"
            android:divider="@drawable/timepicker_selection_divider" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Enviar"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>